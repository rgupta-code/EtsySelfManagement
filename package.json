{
  "name": "etsy-listing-management",
  "version": "1.0.0",
  "description": "A self-management web application for Etsy sellers to streamline listing creation",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js --watch server --watch client --ext js,html,css,json",
    "dev:server": "nodemon server/app.js --watch server --ext js,json",
    "dev:client": "echo 'Client files are served statically - no build step needed for development'",
    "dev:full": "npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "node scripts/build-client.js",
    "build:server": "echo 'Server build complete - no transpilation needed'",
    "prebuild": "npm run lint && npm run test:ci",
    "postbuild": "echo 'Build completed successfully'",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:unit": "jest --testPathIgnorePatterns=integration --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf coverage dist temp",
    "validate": "npm run format:check && npm run lint && npm run test:ci",
    "setup": "npm install && npm run validate",
    "postinstall": "node scripts/dev-setup.js",
    "serve": "npm start",
    "serve:prod": "NODE_ENV=production npm start"
  },
  "keywords": [
    "etsy",
    "listing",
    "management",
    "image-processing",
    "ai-metadata"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.18.0",
    "@google/generative-ai": "^0.2.1",
    "archiver": "^6.0.1",
    "axios": "^1.6.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "gif-encoder-2": "^1.0.5",
    "googleapis": "^129.0.0",
    "helmet": "^7.1.0",
    "jimp": "^0.16.13",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "tmp": "^0.2.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
